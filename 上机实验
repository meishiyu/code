#include <iostream>
#include <stdio.h>
#include <string>
using namespace std;
class Student{       //class declarection
	public:
		string num;
		string name;
		double mask;		
};
class Sqlist{
	private:
		Student *key;
		int length;
	public:
		int reList(Sqlist &l);     //初始化链表函数 
		void input(Sqlist &l,int i);// 
		void showlist(Sqlist l);    //显示链表内容 
		void find(Sqlist l,string name);//查找学生信息 
		void getme(Sqlist l,int i);    //获取学生信息 
		void setin(Sqlist &l,int i);   //插入学生信息 
		void dela(Sqlist &l,int i);   //删除学生信息 
		int getlen(Sqlist &l);        //显示链表长度
		void des(Sqlist &L);         //销毁学生信息 
};
int Sqlist::reList(Sqlist &L){
	L.length=1;
	if(L.length==0) return 0;
	L.key; 
	cout<<"输入学号，姓名，成绩"<<endl; 
	while(scanf("%s%s%d",&L.key->num,&L.key->name,&L.key->mask)!=EOF){
		cout<<"输入学号，姓名，成绩"<<endl;
		L.length++;
		L.key++;
	};
	L.length--;
	return 0;
}

int Sqlist:: getlen(Sqlist &L){
	return L.length;
}

int main(){
	Sqlist La;
	int choose;
