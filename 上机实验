   	cout<<"6.获取学生信息"<<endl;
   	cout<<"7.插入学生信息"<<endl;
   	cout<<"8.删除学生信息"<<endl;
    cout<<"9.销毁；链表 ："<<endl;
	cout<<"0.退出" <<endl;
	cout<<"....................."<<endl;
	cin>>choose;
	choose=-1;
	while(choose!=0){
		cout<<""<<endl;
		cin>>choose;
		switch (choose){
			case 1:
			if(La.reList(La)) cout<<"初始化链表成功"<<endl;
			else cout<<"初始化链表失败"<<endl;
			break;
			case 2:
				break;
			case 3:  
				cout<<"链表长度为"<<La.getlen(La)<<endl;    //显示链表长度 
				break;
			case 4:
				//showlist(La);
				break;
			case 5:
				//showlist(La);
				break;
			case 6:
				break;
